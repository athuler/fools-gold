# Data file path (can be absolute or relative)
DATA_FILE=engagement_data.json

# Refresh interval in seconds (default: 14400 = 4 hours)
REFRESH_INTERVAL=14400

# YouTube API key for fetching video statistics
YOUTUBE_API_KEY=your_youtube_api_key_here

# Tumblr API key for fetching post statistics
TUMBLR_API_KEY=your_tumblr_api_key_here

# Alternative examples:
# DATA_FILE=/path/to/your/data/engagement_data.json
# DATA_FILE=./data/engagement_data.json
# REFRESH_INTERVAL=3600  # 1 hour
# REFRESH_INTERVAL=7200  # 2 hours